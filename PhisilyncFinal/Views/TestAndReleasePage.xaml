<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhisilyncFinal.Views.TestAndReleasePage"
             xmlns:local="clr-namespace:PhisilyncFinal.ViewModels"
             xmlns:models="clr-namespace:PhisilyncFinal.Models"
             xmlns:views="clr-namespace:PhisilyncFinal.Views"
             BackgroundColor="#f0f8e3" x:DataType="views:TestAndReleasePage">

    <Shell.TitleView Margin="25,0,0,0" >
        <Image 
         Source="phisilynclogo.png"
         Background="White"
          Aspect="Center"
      
        Scale="0.8"
         />
    </Shell.TitleView>

    <ScrollView>
        <StackLayout Margin="20">

            <Label
            Text="Treatment Preview"
            FontAttributes="Bold"
               
            TextColor="SeaGreen"
            FontSize="0"
            Style="{DynamicResource TitleStyle}"
            HorizontalTextAlignment="Center"
                VerticalTextAlignment="Start"/>
            
            
            
            
            <Label
                        Text="Test"
                        FontAttributes="Bold"
                        TextColor="Black"
                        FontSize="Medium"
                        Style="{DynamicResource TitleStyle}"
                        HorizontalTextAlignment="Center" />

            <Label 
                                Text="{Binding injurieTest.treatmentActionStepAction}"
                                FontSize="Medium"
                                TextColor="SeaGreen"
                                HorizontalTextAlignment="Start"
                                Style="{DynamicResource BodyStyle}"/>

            <Label
            Text="Release"
            FontAttributes="Bold"
            FontSize="Medium"
            TextColor="Black"
            Style="{DynamicResource TitleStyle}"
            HorizontalTextAlignment="Center"/>

            <Label 
            Text="{Binding injurieRelease.treatmentActionStepAction}"
            FontSize="Medium"
            TextColor="SeaGreen"
            HorizontalTextAlignment="Start"
            Style="{DynamicResource BodyStyle}" />

            <Button
      Text="Add Treatment to Dashboard"
      FontAttributes="Bold"
      TextColor="White"
      BorderColor="Black"
      BorderWidth="1"
       Clicked="Button_Clicked"
      BackgroundColor="SeaGreen"
      CornerRadius="100"
      WidthRequest="350"
      HeightRequest="70"
      Margin="0,0,0,0"/>

        </StackLayout>
    </ScrollView>

</ContentPage>
