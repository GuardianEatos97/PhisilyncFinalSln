<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhisilyncFinal.Views.TestAndReleasePage"
             xmlns:local="clr-namespace:PhisilyncFinal.ViewModels"
             xmlns:models="clr-namespace:PhisilyncFinal.Models"
             xmlns:views="clr-namespace:PhisilyncFinal.Views"
             BackgroundImageSource="greenback" x:DataType="views:TestAndReleasePage">

    <Shell.TitleView Margin="0">
        <Image 
             Source="phisilyncgreen.png"
             Aspect="Center"/>
    </Shell.TitleView>


    <ScrollView>
        <StackLayout Margin="20">
            <Label 
                Text="clone"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                FontSize="Large"
                Style="{DynamicResource TitleStyle}" />

            <Image 
                Source="null"
                HeightRequest="200"
                WidthRequest="200"
                Margin="20"
                HorizontalOptions="Center" />

                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                


                                <Label
                            Text="Test"
                            FontAttributes="Bold"
                            TextColor="White"
                            FontSize="Medium"
                            Style="{DynamicResource TitleStyle}"
                            HorizontalTextAlignment="Center" />

                                <Label 
                            Text="{Binding injurieTest.treatmentActionStepAction}"
                            FontSize="Medium"
                                    TextColor="White"
                            HorizontalTextAlignment="Start"
                            Style="{DynamicResource BodyStyle}"/>

                            </Grid>
                     

            <Label
                Text="Release"
                FontAttributes="Bold"
                FontSize="Medium"
                TextColor="White"
                Style="{DynamicResource TitleStyle}"
                HorizontalTextAlignment="Center"/>

            <Label 
                Text="{Binding injurieRelease.treatmentActionStepAction}"
                FontSize="Medium"
                TextColor="White"
                HorizontalTextAlignment="Start"
                Style="{DynamicResource BodyStyle}" />
                                    
             
                                  
        </StackLayout>
    </ScrollView>

</ContentPage>
