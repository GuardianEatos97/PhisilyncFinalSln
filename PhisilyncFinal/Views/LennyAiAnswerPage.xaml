<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhisilyncFinal.Views.LennyAiAnswerPage"
             BackgroundColor="MintCream">
    <VerticalStackLayout>
        <Label
            Text="Lenny Chatbot"
            FontSize="Large"
            HorizontalOptions="Center"/>
        
        <Frame BackgroundColor="Beige"  Margin="10"  VerticalOptions="FillAndExpand" 
HorizontalOptions="FillAndExpand">
            <Label
           Text="{Binding Response.MessageBody}"
           />
        </Frame>
    </VerticalStackLayout>
</ContentPage>