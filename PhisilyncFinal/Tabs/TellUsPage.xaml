<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#2D2E2D" 
             x:Class="PhisilyncFinal.Tabs.TellUsPage">
    <ScrollView Orientation="Vertical">
        <VerticalStackLayout>
            <Image
            Source="phisilync_nobg.png"
            HeightRequest="210"
            WidthRequest="400"
            Aspect="AspectFill"
            Margin="0"
            SemanticProperties.Description="Phisilync Logo" />

            <Label
            Text="Let's Get Started"
            TextColor="white"
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalOptions="Center" 
            Margin="10"/>

            <Label
            Text="Fully Personalize Your Phisilync Experience"
            TextColor="White"
            FontAttributes="Bold"
            FontSize="Medium"
            HorizontalOptions="Center"
            Margin="10"/>

            <Label
            Text="Tell Us About You :"
            TextColor="White"
            FontSize="Medium" 
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"
            Margin="10"/>

            <Button
            Text="I Am An Athlete"
            FontAttributes="Bold"
            TextColor="White"
            BorderColor="Black"
            BackgroundColor="#E21C21"
            Clicked="Button_Clicked"
            BorderWidth="1"
            CornerRadius="100"
            WidthRequest="500"
            HeightRequest="70"
            Margin="10"/>

            <Button
            Text="I Am A Coach"
            FontAttributes="Bold"
            CornerRadius="100"
            TextColor="White"
            BorderColor="Black"
            BorderWidth="1"
            BackgroundColor="#E21C21"
            Clicked="Button_Clicked_3"
            WidthRequest="500"
            HeightRequest="70"
            Margin="10"/>

            <Button
            Text="I Am A Service Provider"
            FontAttributes="Bold"
            TextColor="White"
            CornerRadius="100"
            BackgroundColor="#E21C21"
            BorderColor="Black" 
            BorderWidth="1"
            Clicked="Button_Clicked_1"
            WidthRequest="500"
            HeightRequest="70"
            Margin="10"/>

            <Frame 
            Grid.Row="0" 
            Grid.ColumnSpan="0"
            HeightRequest="350"
            WidthRequest="600"
            CornerRadius="50"
            HorizontalOptions="CenterAndExpand"
            IsClippedToBounds="True"
            Padding="0"
            BackgroundColor="White"
            BorderColor="White" 
            Margin="10">

                <ImageButton Source="workout" Aspect="Fill"/>
            </Frame>

            <Button
                Text="Already Have An Account?"
                TextColor="White"
                WidthRequest="300"
                BackgroundColor="#2D2E2D"
                Clicked="Button_Clicked_2"
                FontSize="Body" 
                CornerRadius="100"
                VerticalOptions="EndAndExpand"
                HorizontalOptions="Center"
                Margin="10" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
