<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="Black"
             x:Class="PhisilyncFinal.Tabs.SignUpPageAC">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="phisilync.png"
                HeightRequest="210"
                WidthRequest="400"
                Aspect="AspectFit"
                SemanticProperties.Description="Phisilync Logo" />

            <Label
                Text="Sign Up"
                FontSize="Large"
                FontAttributes="Bold"
                FontFamily="bubble"
                TextColor="White" 
                HorizontalOptions="CenterAndExpand" />
            

            <Entry
                x:Name="nameEntry"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="White"
                Placeholder="Name"
                WidthRequest="500"
                FontSize="20" 
                Text="{Binding CurrentUser.userName}"/>

            <Entry
                x:Name="surnameEntry"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="White"
                Placeholder="Surname"
                WidthRequest="500"
                FontSize="20" 
                Text="{Binding CurrentUser.userSurname}"/>

            <Entry
                x:Name="emailEntry"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="White"
                Placeholder="Email Address"
                WidthRequest="500"
                FontSize="20" 
                Text="{Binding CurrentUser.userEmail}"/>

            <Entry
                x:Name="passwordEntry"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="White"
                Placeholder="Password "
                WidthRequest="500"
                MaxLength="14"
                FontSize="20" 
                Text="{Binding CurrentUser.userPassword}"/>

            <Button
                Text="Create Account"
                TextColor="White"
                BackgroundColor="Red"
                Clicked="CreateAccountButton"
                StyleId="TellUsPage"
                WidthRequest="500"/>

            <Label
                Text="Sign Up Using :"
                TextColor="White" 
                HorizontalOptions="CenterAndExpand"
                FontSize="Body"/>

            <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                <Image
                    Source="googleb"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    HorizontalOptions="Center" 
                    Margin="0,10,15,0"/>

                <Image
                    Source="facebook1"
                    Aspect="AspectFit"
                    HeightRequest="50"
                    HorizontalOptions="Center" />
            </HorizontalStackLayout>

            <Button
                Text="Already Have An Account?"
                TextColor="White"
                WidthRequest="300"
                CornerRadius="100"
                BackgroundColor="Black"
                Clicked="Button_Clicked_2"
                FontSize="Body" 
                HorizontalOptions="Center"
                Margin="0,0,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>