<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cal="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar"
             xmlns:chart="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="PhisilyncFinal.Tabs.ServiceProviderDashboard"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             BackgroundImageSource="greenback"
             Title="ServiceProviderDashboard">
    <Shell.TitleView Margin="0,0,0,0">
        <Image 
             Source="phisilyncgreen"
             Aspect="Center"/>
    </Shell.TitleView>

    <ScrollView Orientation="Vertical">
        <VerticalStackLayout>
            <toolkit:AvatarView
                Text="Noah"
                BorderColor="SeaGreen"
                TextColor="White"
                ImageSource="profileimage"
                HorizontalOptions="End"
                CornerRadius="360"
                Margin="10"
                WidthRequest="70"
                HeightRequest="70"
                BorderWidth="5"
                />

            <Label
                Text="Noah Khan"
                HorizontalOptions="End"
                Margin="10,0"
                TextColor="Beige"
                />

            <Label Text="Welcome (Service Provider Name)"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="Medium"
                   Margin="20,70,0,0"/>

            <Label
                Text="Dashboard"
                TextColor="Beige"
                FontAttributes="Bold"
                FontSize="Large"
                Margin="20,0,0,0"/>

            <Label Text="Client Tracker"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="20"
                   Margin="0,40,0,0"
                   HorizontalTextAlignment="Center"/>

            <Frame HeightRequest="400"
                   WidthRequest="600"
                   CornerRadius="10"
                   IsClippedToBounds="True"
                   BackgroundColor="White"
                   BorderColor="White">

                <chart:ChartView x:Name="clientTracker"
                                 HeightRequest="200"/>
            </Frame>

            <cal:Calendar Events="{Binding Events}" 
                   EventsScrollViewVisible="True" 
                   SelectedDayBackgroundColor="SeaGreen"
                   CalendarLayout="Month"
                   BackgroundColor="Transparent"
                   DayViewCornerRadius="5"
                   DeselectedDayTextColor="Beige"
                   SelectedDateColor="Beige"
                   ArrowsBackgroundColor="SeaGreen"
                   ArrowsBorderColor="Beige"
                   ArrowsColor="Beige"
                   DaysTitleColor="Beige"
                   DaysTitleWeekendColor="White" 
                   DisabledDayColor="Beige"
                   EventIndicatorColor="SeaGreen"
                   EventIndicatorSelectedColor="Beige"
                   EventIndicatorSelectedTextColor="Beige"
                   MonthLabelColor="Beige"
                   OtherMonthDayColor="Beige"
                   SelectedDayTextColor="Beige"
                   SelectedTodayTextColor="Beige"
                   TodayFillColor="#89a18b"
                   TodayOutlineColor="Beige"
                   TodayTextColor="Beige" 
                   WeekendDayColor="Beige"
                   YearLabelColor="Beige"
                   EventIndicatorTextColor="Beige"
                   Margin="70"
                   HeightRequest="500">
                <cal:Calendar.EventTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                            <Label 
                                 Text="{Binding Name}" 
                                 FontSize="25" 
                                 TextColor="Beige"
                                 FontAttributes="Bold"/>
                            <Label 
                                 Text="{Binding Description}"
                                 TextColor="Beige"/>
                        </VerticalStackLayout>
                    </DataTemplate>
                </cal:Calendar.EventTemplate>
            </cal:Calendar>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>