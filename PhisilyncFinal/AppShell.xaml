<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PhisilyncFinal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PhisilyncFinal.Views"
    xmlns:flyout="clr-namespace:PhisilyncFinal.FlyoutControls"
    Shell.FlyoutBehavior="Flyout"
    FlyoutHeaderBehavior="CollapseOnScroll"
    Title="PhisilyncFinal" BackgroundColor="#465d57">

 
    <Shell.FlyoutHeader>
        <flyout:FlyoutHeader />
    </Shell.FlyoutHeader>

    <Shell.FlyoutFooter>
        <flyout:FlyoutFooter />
    </Shell.FlyoutFooter>

    <Shell.Resources>
        <Style x:Key="BaseStyle"
   TargetType="Element">
            <Setter Property="Shell.BackgroundColor"
        Value="Black" />
            <Setter Property="Shell.ForegroundColor"
        Value="White" />
            <Setter Property="Shell.TitleColor"
        Value="White" />
            <Setter Property="Shell.DisabledColor"
        Value="#B4FFFFFF" />
            <Setter Property="Shell.UnselectedColor"
        Value="#95FFFFFF" />
        </Style>
        <Style TargetType="ShellItem"
   BasedOn="{StaticResource BaseStyle}" />
    </Shell.Resources>

    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid HorizontalOptions="FillAndExpand" ColumnDefinitions="0.2*,0.8*" HeightRequest="50">

                <Image Source="{Binding FlyoutIcon}"
               Margin="5"
               HeightRequest="24" />
                <Label Grid.Column="1"
               Text="{Binding Title}"
               FontSize="16"
               FontAttributes="None"
               VerticalTextAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent  
            Title="Dashboard"
            Icon="dashboard.png"
        Style="{StaticResource BaseStyle}"

ContentTemplate="{DataTemplate local:AthleteDash}"
Route="AthleteDash" />


        <ShellContent
Title="Privacy Policy"
            Icon="compliant.png"
        Style="{StaticResource BaseStyle}"
ContentTemplate="{DataTemplate local:PrivacyPolicy}"
      
Route="PrivacyPolicy" />

        <ShellContent
Title="Terms And Conditions"
            Icon="tac.png"
        Style="{StaticResource BaseStyle}"
ContentTemplate="{DataTemplate local:TACPage}"
  
Route="TACPage" />

        <ShellContent
Title="FAQs"
            Icon="qa.png"
        Style="{StaticResource BaseStyle}"
ContentTemplate="{DataTemplate local:FAQs}"
            
Route="FAQs" />

        <ShellContent
Title="Tell Us"
            Icon="qa.png"
        Style="{StaticResource BaseStyle}"
ContentTemplate="{DataTemplate local:TellUsPage}"
  
Route="TellUsPage" />

    </FlyoutItem>

